<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhatsAppRegisterVerification">

    <ImageView
        android:id="@+id/logo_verification"
        android:layout_width="300dp"
        android:layout_height="97dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/cbcartel_text" />

    <TextView
        android:id="@+id/tv_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhatsApp Verification"
        android:textSize="25sp"
        android:fontFamily="@font/spoof_bold"
        app:layout_constraintTop_toBottomOf="@id/logo_verification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:hint="Enter your phone number"
        android:inputType="phone"
        android:background="@drawable/custom_background_for_edittext"
        android:fontFamily="@font/spoof_regular"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_verification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_send_code"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:background="@drawable/custombutton"
        android:text="SEND CODE"
        android:fontFamily="@font/spoof_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/et_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/et_verification_code"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:hint="Enter verification code"
        android:inputType="number"
        android:background="@drawable/custom_background_for_edittext"
        android:fontFamily="@font/spoof_regular"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_send_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_verify_code"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:background="@drawable/custombutton"
        android:text="VERIFY"
        android:fontFamily="@font/spoof_regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/et_verification_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
